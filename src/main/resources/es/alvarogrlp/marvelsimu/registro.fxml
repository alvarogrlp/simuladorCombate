<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane stylesheets="@style.css" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.alvarogrlp.marvelsimu.backend.controller.RegistroController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Text fx:id="textUsuario" strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre de Usuario:">
               <VBox.margin>
                  <Insets top="150.0" />
               </VBox.margin>
            </Text>
            <TextField fx:id="textFiledUsuario" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0" prefWidth="242.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <Text fx:id="textEmail" strokeType="OUTSIDE" strokeWidth="0.0" text="Email:">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Text>
            <TextField fx:id="textFieldEmail" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0" prefWidth="326.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <Text fx:id="textContrasenia" strokeType="OUTSIDE" strokeWidth="0.0" text="Contraseña:">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Text>
            <PasswordField fx:id="textFieldPassword" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0" prefWidth="285.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </PasswordField>
            <Text fx:id="textRepetirContrasenia" strokeType="OUTSIDE" strokeWidth="0.0" text="Repetir Contraseña:">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Text>
            <PasswordField fx:id="textFieldPasswordRepit" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0" prefWidth="285.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </PasswordField>
            <Text fx:id="textMensaje" strokeType="OUTSIDE" strokeWidth="0.0" text="">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Text>
            <Button fx:id="buttonRegistrar" mnemonicParsing="false" onAction="#onClickRegistar" text="Registrarme">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="onVolverButton" mnemonicParsing="false" onAction="#openVolverClick" text="Volver">
               <VBox.margin>
                  <Insets top="80.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
