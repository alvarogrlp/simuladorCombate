<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.alvarogrlp.marvelsimu.backend.controller.BatallaController">

   <ImageView fx:id="fondo" fitHeight="800" fitWidth="400" preserveRatio="false">
   </ImageView>

   <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="810.0" prefWidth="410.0" spacing="10.0" styleClass="container">
      <children>
         <Text fx:id="txtTitulo" styleClass="title-text" text="BATALLA">
            <VBox.margin>
               <Insets />
            </VBox.margin></Text>
         
         <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="529.0" prefWidth="368.0" styleClass="battle-buttons-container">
            <children>
               <Button fx:id="on3v3Button" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#on3vs3Click" prefHeight="134.0" prefWidth="328.0" styleClass="battle-button" text="3 VS 3" />
               <Button fx:id="on5v5Button" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#on5vs5Click" prefHeight="134.0" prefWidth="328.0" styleClass="battle-button" text="5 VS 5" />
               <Button fx:id="onHistoriaButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onHistoriaClick" prefHeight="134.0" prefWidth="328.0" styleClass="battle-button" text="HISTORIA" />
            </children>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </VBox>
         
         <Button fx:id="onVolverButton" onAction="#onVolverClick" styleClass="button-normal" text="Volver">
            <VBox.margin>
               <Insets top="30.0" />
            </VBox.margin>
         </Button>
      </children>
      <padding>
         <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
      </padding>
   </VBox>

</StackPane>
